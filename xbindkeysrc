#Key bindings for Function keys on laptop

# Lower Volume
"amixer set Master playback 1-"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Increase Volume
"amixer set Master playback 1+"
    m:0x0 + c:123
    XF86AudioRaiseVolume

#Toggle mute
"amixer set Master toggle"
    m:0x0 + c:121
    XF86AudioMute

#Toggle play/pause
"ncmpcpp toggle"
    m:0x0 + c:172
    XF86AudioPlay

#Toggle Stop
"ncmpcpp stop"
    m:0x0 + c:174
    XF86AudioStop

#Toggle Prev
"ncmpcpp prev"
    m:0x0 + c:173
    XF86AudioPrev

#Toggle Prev
"ncmpcpp next"
    m:0x0 + c:171
    XF86AudioNext

#Screenshot
"scrot"
    m:0x0 + c:107
    Print

#End of configuration file